<% layout('boilerplate') %>

    <div class="container">
        <div class="row">
            <h2 class="text-center">All Courses</h2>
            <hr>

            <% for(var i = 0; i < courses.length ; i++){ %>
                <div class="col-md-4">
                    <a href="/courses/<%= courses[i]._id %>" style="text-decoration: none; color: #34495e">
                        <div class="panel panel-default">
                            <div class="panel-body" style="background-color: #f4f4f4; border: 0px; height: 250px; overflow-y:auto; display:grid; ">
                                <h4 class="text-center">
                                    <b style="color:gray;">
                                        <%= courses[i].title %>
                                    </b>
                                </h4>
                                <p style="color:dimgray; font-family:cursive;font-size: 15px;">
                                    <%= courses[i].desc %>
                                </p>

                            </div>
                        </div>
                    </a>
                </div>
                <% } %>

        </div>
    </div>