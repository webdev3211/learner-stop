<% layout('boilerplate') %>


    <div class="conatiner">
        <div class="row">
            <div class="col-lg-6 col-md-offset-3">
                <h1>Create Course</h1>
                <form role="form" method="post">
                    <div class="form-group">
                        <label for="name">Title: </label>
                        <input type="text" class="form-control" autocomplete="off" name="title">
                    </div>

                    <div class="form-group">
                        <label for="name">Price: </label>
                        <input type="text" class="form-control" autocomplete="off" name="price">
                    </div>

                    <div class="form-group">
                        <label for="name">Description: </label>
                        <input type="text" class="form-control" autocomplete="off" name="desc">
                    </div>

                    <div class="form-group">
                        <label for="name">Thumbnail: </label>
                        <input type="text" class="form-control" autocomplete="off" name="thumbnail">
                    </div>

                    <label for="name">Notes: </label>
                    <textarea name="notes" id="" cols="80" rows="10" autocomplete="off" style="padding: 10px;">
                        </textarea>


                    <div class="form-group">
                        <label for="name">Wistia ID: </label>
                        <input type="text" class="form-control" autocomplete="off" name="wistiaId">
                    </div>

                    <button type="submit" class="btn btn-success">Submit</button>

                </form>

            </div>
        </div>
    </div>